<!DOCTYPE html>
<html>
  <head>
    <title>Edit Reminder</title>
  </head>
  <body>
    <h1>Edit Reminder</h1>
    <form action="/reminders/<%= reminder._id %>?_method=PUT" method="POST">
      <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= reminder.title %>">
      </div>
      <div>
        <label for="description">Description:</label>
        <textarea id="description" name="description"><%= reminder.description %></textarea>
      </div>
      <div>
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" value="<%= reminder.date.toISOString().substr(0, 10) %>">
      </div>
      <button type="submit">Save Changes</button>
    </form>
    <a href="/">Cancel</a>
  </body>
</html>
